name: deploy-book

# Only run this when the master branch changes
on:
  push:
    branches:
    - main

# This job installs dependencies, builds the book, and pushes it to `gh-pages`
jobs:
  deploy-book:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v2

    # Install dependencies
    - name: Set up Python 3.8
      uses: actions/setup-python@v2
      with:
        python-version: 3.8

    - name: Install dependencies
      run: |
        pip install -r JBfiles/requirements.txt
    # Build the book
    - name: Build the book
      run: |
        jupyter-book build JBfiles
  
      
    - name: Build LATEX
      run: |
        jupyter-book build JBfiles --builder pdfhtml
        
        
    - name: move book to documentation folder
      run: |
        #!/bin/bash
        mv  JBfiles/_build/pdf/watermarked-copy.pdf   ./documentation
        
        
    - name: commit pdf to repo
      run: |
          git config --global user.name 'Lucrezia-Cester'
          git config --global user.email 'lucrezia.cester@gstt.nhs.uk'
          git add documentation/watermarked-copy.pdf
          git commit -am "committed watermarked jupiyterbook pdf to repo"
          git push
